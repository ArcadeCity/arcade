{
  "name": "@arcadecity/use-arcade",
  "version": "0.0.1",
  "description": "React hooks for Arcade",
  "license": "CC0-1.0",
  "source": "src/index.ts",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "private": true,
  "scripts": {
    "lint": "eslint ./src --max-warnings 0 --cache",
