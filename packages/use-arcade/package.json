    "@scure/bip32": "1.1.0",
    "@scure/bip39": "1.1.0",
    "@testing-library/react": "13.3.0",
    "@testing-library/react-hooks": "8.0.1",
    "@types/jest": "26.0.15",
    "@types/react": "18.0.15",
    "@typescript-eslint/eslint-plugin": "4.6.0",
    "@typescript-eslint/parser": "4.6.0",
    "babel-eslint": "10.1.0",
    "create-hash": "1.2.0",
    "eslint": "7.12.1",
