{
  "extends": "tsconfig/react-native-library",
  "include": ["."],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "lib": ["./lib"],
      "lib/*": ["./lib/*"],
      "stores": ["./stores"],
      "stores/*": ["./stores/*"]
    }
  }
}
