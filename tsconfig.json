{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@arcadecity/use-arcade": ["packages/use-arcade/src"],
      "app/*": ["./packages/app/*"],
      "ui": ["./packages/ui"],
      "ui/*": ["./packages/ui/*"],
      "use-arcade": ["./packages/use-arcade"],
      "use-arcade/*": ["./packages/use-arcade/*"]
    }
  }
}
