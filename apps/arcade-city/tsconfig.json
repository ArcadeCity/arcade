{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "i18n": ["src/i18n"],
      "i18n/*": ["src/i18n/*"],
      "lib": ["src/lib"],
      "lib/*": ["src/lib/*"],
      "navigation": ["src/navigation"],
      "navigation/*": ["src/navigation/*"],
      "services/*": ["src/services/*"],
      "stores/*": ["src/stores/*"],
      "stores": ["src/stores"],
      "views/*": ["src/views/*"]
    }
  },
  "include": ["src/**/*"]
}
